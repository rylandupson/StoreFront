        </th>
        <th>
            @Html.DisplayNameFor(model => model.Console.ConsoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.GenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher.PublisherName)
        </th>
